{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"paths": {
			"@domain/*": ["packages/domain/src/*"],
			"@contract/*": ["packages/contract/dist/*"]
		}
	},
	"files": [],
	"references": [
		{ "path": "packages/contract" },
		{ "path": "apps/api" },
		{ "path": "apps/web-admin" },
		{ "path": "apps/web-manager" },
		{ "path": "apps/web-user" }
	]
}
